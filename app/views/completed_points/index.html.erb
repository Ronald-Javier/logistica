<%= form_with(model: @new_completed_point, local: true) do |form| %>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th class="text-center">TUS PUNTOS</th>
            <th class="text-center">ACCIONES</th>
        </tr>
    </thead>
    <tbody>
        <td class="text-center"><%= form.select(:point_id, options_for_select(@points.pluck(:name, :id))) %></td>
        <td class="text-center"><%= form.submit "Completar Punto", class: 'btn btn-light' %></td>
    </tbody>
</table>
<% end %>
<br>

<%= render  "list" %>