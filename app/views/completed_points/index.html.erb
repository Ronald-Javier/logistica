<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th class="text-center">TUS PUNTOS</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
    <%= form_with(model: @points, url: completed_point_path(@points), local: true) do |form| %>
    <td><%= form.select(:point_id, options_for_select(@completed_points)) %></td>
    <td><%= form.submit "Completar Punto", class: 'btn btn-light' %></td>
    <% end %>
  </tbody>
</table>




  