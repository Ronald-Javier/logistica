<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="card">
<article class="card-body mx-auto" style="max-width: 400px;">
	<h4 class="card-title mt-3 text-center">Crear Cuenta</h4>
	<p class="text-center">Puedes crear tu cuenta totalmente gratis!</p>
		<p>
		<a href="" class="btn btn-block btn-danger"> <i class="fab fa-google"> Login via Gmail</a></i>
    <%= link_to " Login Via Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-block btn-facebook fab fa-facebook' %>
	</p>
	<p class="divider-text">
        <span class="">OR</span>
    </p>
	<form>
	<div class="form-group input-group">
		<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
		 </div>
       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: 'Nombre y Apellido' %>
    </div> <!-- form-group// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
		 </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Correo Electronico', class: 'form-control' %>
    </div> <!-- form-group// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fas fa-car-side"></i> </span>
		</div>
		<select class="form-control">
			<option selected=""> Selecciona Tipo de Vehiculo</option>
			<option>Furgon</option>
			<option>Moto</option>
		</select>
	</div> <!-- form-group end.// -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		</div>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Contraseña' %>
    </div> <!-- form-group// -->
    <% if @minimum_password_length %>
    <h6>(<%= @minimum_password_length %> caracteres minimos)</h6>
    <% end %>
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
		</div>
       <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Repita la Contraseña' %>
    </div> <!-- form-group// -->                                      
    <div class="form-group">
            <%= f.submit "Completar Registro", class: 'btn btn-primary btn-block' %>
    </div> <!-- form-group// -->      
    <%= render "devise/shared/links" %>                                                                 
</form>
</article>
<% end %>
</div> <!-- card.// -->
</div> 
